<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="horizontal"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/estadoAtencionImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/presence_online"
        android:contentDescription="@string/statusIcon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="4dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:weightSum="1"
            android:gravity="right">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:layout_weight="0.99">

                <TextView
                    android:id="@+id/fechaAtencionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="0px"
                    android:singleLine="true"
                    android:textColor="#444444"
                    android:textStyle="bold"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/nroAtencionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="0px"
                    android:singleLine="true"
                    android:textColor="#444444"
                    android:textStyle="bold"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/domicilioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:orientation="vertical"
                    android:singleLine="false"
                    android:textColor="#666666"
                    android:gravity="left"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/codigoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:orientation="vertical"
                    android:singleLine="false"
                    android:textColor="#666666"
                    android:gravity="left"
                    android:layout_gravity="left" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/dispatcherImageView"
                    android:contentDescription="@string/dispatcherImageDesc"
                    android:onClick="DoDispatcherDetail" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <TextView
                android:id="@+id/estadoAtencionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:padding="0px"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="10dp"
                android:layout_gravity="left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="right"
                android:paddingLeft="4dp"
                android:paddingRight="15dp" >

                <TextView
                    android:id="@+id/syncronizedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:padding="0px"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textSize="10dp"
                    android:layout_gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>